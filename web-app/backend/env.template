# Backend Environment Variables Template
# Copy this file to .env and adjust values as needed

# Debug mode (set to True or False)
DEBUG=False

# Port the backend runs on
PORT=5001

# Redis (example)
REDIS_URL=redis://localhost:6379/0

# vLLM service endpoint (example)
VLLM_SERVER_URL=http://localhost:8000

# Whisper service endpoint (example)
WHISPER_SERVICE_URL=http://localhost:9000

# JWT authentication
JWT_SECRET=atlas_default_secret
JWT_ALGORITHM=HS256

# vLLM model name
VLLM_MODEL=HuggingFaceTB/SmolLM3-3B 