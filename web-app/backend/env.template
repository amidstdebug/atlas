# Backend Environment Variables Template
# Copy this file to .env and adjust values as needed

# Application Settings
DEBUG=True
PORT=5002

# Service URLs (Docker Compose service names)
AUDIO_SERVER_URL=http://whisper_service:8000
VLLM_SERVER_URL=http://vllM_service:8000
WHISPER_SERVICE_URL=http://whisper_service:8000
REDIS_URL=redis://redis:6379/0

# Security Settings
JWT_SECRET=your_secure_jwt_secret_key_here_change_this_in_production
JWT_ALGORITHM=HS256

# Model Settings
VLLM_MODEL=Qwen/Qwen3-0.6B

# vLLM Service Configuration (for Docker)
VLLM_GPU_MEMORY_UTILIZATION=0.7
VLLM_MAX_MODEL_LEN=2048
VLLM_TENSOR_PARALLEL_SIZE=1

# CORS Settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"] 